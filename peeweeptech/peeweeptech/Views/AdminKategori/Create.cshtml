@model peeweeptech.Models.Kategori

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create Category</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
